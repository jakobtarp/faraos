const { title, description, link } = Astro.props;
import Button from "./Button.astro";
---

<li class="bg-gray-900 p-5">
  <div class="grid gap-3 my-3 shadow-xl rounded-lg p-3 bg-black">
    <img class="mx-auto" src="imgs/chill_hits.jpeg" alt="" />
    <h3 class="text-white text-md">{title}</h3>
    <p class="text-gray-500 text-sm">
      {description}
    </p>
  </div>
</li>
